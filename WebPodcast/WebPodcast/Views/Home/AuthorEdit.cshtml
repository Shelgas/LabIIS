@model WebPodcast.Models.Author

@{
    ViewData["Title"] = "AuthorEdit";
}

<h1>Редактировать автора</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AuthorEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <button type="button" class="btn btn-danger"
                        onclick="location.href='@Url.Action("PodcastDelete", "Home",  new { id=Model.Id, authorName = ViewData["AuthorName"]})'">
                    <i class="fa fa-plus"></i> Удалить автора
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
