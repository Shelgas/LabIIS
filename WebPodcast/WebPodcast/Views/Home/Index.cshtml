@{
    ViewData["Title"] = "Список авторов";
}
<!DOCTYPE html>

<div class="container">
    <div class="table-wrapper">

        <div class="table-title">
            <div class="row">
                <div class="col-sm-8"><h2>Подкасты</h2></div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-info add-new" onclick="location.href='@Url.Action("AddAuthor", "Home")'" >
                    <i class="fa fa-plus"></i>Добавить автора</button>
                </div>
            </div>
        </div>
        @foreach (var author in Model)
        {
            <table class="table-condensed">
                <tr data-href="@author.Name">
                    <td rowspan="2">
                        <img src="@author.Image" width="100" height="111" class="img-thumbnail">
                    </td>
                    <td style="font-size: 22px; padding-left: 15px;" class="font-weight-bold">@author.Name</td>
                </tr>
                <tr>
                    <td style="padding-left: 15px;">@author.Description</td>
                </tr>
                <hr />
            </table>
        }
    </div>
</div>